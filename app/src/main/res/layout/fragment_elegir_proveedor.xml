<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ElegirProveedorFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/lblProvedores"
            android:layout_width="110dp"
            android:layout_height="21dp"
            android:text="Proveedores"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.124"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.075" />

        <TextView
            android:id="@+id/lblElegirProveedor"
            android:layout_width="110dp"
            android:layout_height="38dp"
            android:text="Elegir Proveedor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.122"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblProvedores"
            app:layout_constraintVertical_bias="0.097" />

        <Spinner
            android:id="@+id/spnElegirProveedor"
            android:layout_width="190dp"
            android:layout_height="38dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.794"
            app:layout_constraintStart_toEndOf="@+id/lblElegirProveedor"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.193" />

        <TextView
            android:id="@+id/lblCostoServicio"
            android:layout_width="132dp"
            android:layout_height="40dp"
            android:text="Costo del Servicio"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.132"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblElegirProveedor"
            app:layout_constraintVertical_bias="0.094" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="190dp"
            android:layout_height="38dp"
            android:text="$450.00"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.711"
            app:layout_constraintStart_toEndOf="@+id/lblCostoServicio"
            app:layout_constraintTop_toBottomOf="@+id/spnElegirProveedor"
            app:layout_constraintVertical_bias="0.094" />

        <Button
            android:id="@+id/btnConfirmarServicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirmar Proveedor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.919"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintVertical_bias="0.089" />
        <!--            app:layout_constraintTop_toBottomOf="@+id/txtFecNac"-->


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>